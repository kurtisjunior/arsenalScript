# Arsenal Pulse - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to git!

# ============================================================
# REQUIRED - Core APIs
# ============================================================

# The Odds API - Real-time betting odds
# Get your key at: https://the-odds-api.com/
# Free tier: 500 requests/month
THE_ODDS_API_KEY=your_odds_api_key_here

# Football Data API - Match fixtures and historical data
# Get your key at: https://www.football-data.org/client/register
# Free tier: 10 requests/minute
FOOTBALL_DATA_API_KEY=your_football_data_api_key_here

# ============================================================
# OPTIONAL - Social Media Sentiment
# ============================================================

# Reddit API - For r/Gunners sentiment analysis
# Create app at: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=ArsenalPulse/2.0

# Twitter/X API - For social sentiment (requires developer account)
# Apply at: https://developer.twitter.com/
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_SECRET=your_twitter_access_secret

# ============================================================
# OPTIONAL - Email Delivery
# ============================================================

# SMTP settings for email delivery of intelligence briefs
# For Gmail: Use App Password (not regular password)
# Generate at: https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here

# Comma-separated list of recipients
EMAIL_RECIPIENTS=recipient1@example.com,recipient2@example.com

# ============================================================
# OPTIONAL - Push Notifications (Legacy)
# ============================================================

# ntfy.sh notification URL for push notifications
# Format: ntfy://ntfy.sh/your-unique-topic-name
# Example: ntfy://ntfy.sh/arsenal-john-2025
NOTIFY_URL=ntfy://ntfy.sh/arsenal-YOUR-NAME

# Your timezone (defaults to America/New_York if not set)
# Examples: America/New_York, America/Los_Angeles, Europe/London
USER_TIMEZONE=America/New_York

# When to notify (local time, 24-hour HH:MM)
# Default: 18:00 (6pm local time, the night before)
NOTIFY_LOCAL_TIME=18:00

# How wide the notify window is (minutes)
# Default: 240 (helps with GitHub schedule drift and DST)
NOTIFY_WINDOW_MINUTES=240

# Set to true to force a notification immediately (useful for testing)
FORCE_NOTIFY=false

# ============================================================
# OPTIONAL - Development/Testing
# ============================================================

# Enable debug mode for verbose logging
DEBUG=false

# Cache TTL in seconds (default: 3600 = 1 hour)
CACHE_TTL=3600

# Output directory for generated reports
OUTPUT_DIR=./output
